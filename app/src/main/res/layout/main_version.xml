<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:context=".IndexActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/main_listitem_height"
		android:orientation="horizontal"
		tools:context=".IndexActivity">

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.12"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/main_version_android"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:id="@+id/tv_version"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.52"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_s" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/main_version_sn"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:id="@+id/tv_sn"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.28"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_ss" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/main_listitem_height"
		android:orientation="horizontal"
		tools:context=".IndexActivity">

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.12"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/main_version_model"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:id="@+id/tv_model"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_ss" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/main_version_ram"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:id="@+id/tv_ram"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_s" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/main_version_flash"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:id="@+id/tv_flash"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.112"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_s" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/main_version_mac"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:id="@+id/tv_mac"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.28"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_s" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/main_listitem_height"
		android:orientation="horizontal"
		android:visibility="visible"
		tools:context=".IndexActivity">

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.12"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/sys_info"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />
		<TextView
			android:id="@+id/tv_info"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.52"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:text="@string/package_time"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size" />
		<TextView
			android:id="@+id/tv_packagetime"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="0.28"
			android:background="@drawable/main_list_item_bg"
			android:contentDescription="@null"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/main_listitem_size_s" />
	</LinearLayout>
</LinearLayout>
